<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/video2"
    tools:context=".New_video">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="375dp"
        android:background="@drawable/shape5"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_video1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:layout_width="315dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape4"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:text="@string/new_video2"
            android:textColor="@color/unknown"
            android:importantForAutofill="no"
            tools:ignore="LabelFor,RtlSymmetry"
            android:paddingStart="15dp" />

        <EditText
            android:layout_width="315dp"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape4"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:text="@string/new_video3"
            android:textColor="@color/unknown"
            android:importantForAutofill="no"
            tools:ignore="LabelFor,RtlSymmetry"
            android:paddingStart="15dp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/new_video5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_20" />

            <EditText
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape4"
                android:inputType="time"
                android:paddingLeft="15dp"
                android:text="@string/new_video4"
                android:textColor="@color/unknown"
                android:paddingStart="15dp"
                tools:ignore="LabelFor,RtlSymmetry"
                android:importantForAutofill="no" />
        </LinearLayout>

        <TextView
            android:id="@+id/create"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape2"
            android:gravity="center"
            android:text="@string/new_video5"
            android:textColor="@color/strange"
            android:textSize="28sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>